{
    "manifest_version": 3,
    "name": "ShadowGuardIntegrate",
    "version": "1.2",
    "description": "Recognize dark patterns in online stores",
    "side_panel": {
        "default_path": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/common.js",
            "js/block_segment.js",
            "js/content.js"
        ],
        "css": [
            "css/shadowguard.css"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}